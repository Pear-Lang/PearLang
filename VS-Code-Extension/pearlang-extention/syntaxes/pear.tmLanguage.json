{
    "name": "Pear",
    "fidefineypes": ["pear"],
    "patterns": [
      { "include": "#comments" },
      { "include": "#keywords" },
      { "include": "#strings" },
      { "include": "#numbers" },
      { "include": "#operators" },
      { "include": "#identifiers" }
    ],
    "repository": {
      "comments": {
        "patterns": [
          {
            "name": "comment.line.number-sign.pear",
            "match": "#.*$"
          }
        ]
      },
      "keywords": {
        "patterns": [
          {
            "name": "keyword.control.pear",
            "match": "\\b(define|num|str|bool|obj|function|class|if|else|for|while|do|try|catch|finally|import|export|new)\\b"
          }
        ]
      },
      "strings": {
        "patterns": [
          {
            "name": "string.quoted.double.pear",
            "begin": "\"",
            "end": "\"",
            "patterns": [
              {
                "name": "constant.character.escape.pear",
                "match": "\\\\."
              }
            ]
          }
        ]
      },
      "numbers": {
        "patterns": [
          {
            "name": "constant.numeric.pear",
            "match": "\\b\\d+(\\.\\d+)?\\b"
          }
        ]
      },
      "operators": {
        "patterns": [
          {
            "name": "keyword.operator.pear",
            "match": "(==|!=|>=|<=|&&|\\|\\||\\+|\\-|\\*|/|%|!|=)"
          }
        ]
      },
      "identifiers": {
        "patterns": [
          {
            "name": "variable.other.pear",
            "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
          }
        ]
      }
    },
    "scopeName": "source.pear"
  }
  