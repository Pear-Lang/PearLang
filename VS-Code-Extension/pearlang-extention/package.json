{
  "name": "pearlanguage",
  "displayName": "PearLang Colorful Syntax",
  "description": "Syntax highlighting for Pear programming language.",
  "publisher": "Julian Stoffels",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "pearlang",
      "aliases": ["Pear", "pearlang"],
      "extensions": [".p", ".pear"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "pearlang",
      "scopeName": "source.pear",
      "path": "./syntaxes/pear.tmLanguage.json"
    }],
    "iconThemes": [
      {
        "id": "pearlang-theme",
        "label": "PearLang File Icon Theme",
        "path": "./fileicons/pearlang-icon-theme.json"
      }
    ]  
  },
  "icon": "images/logo.png"
}
